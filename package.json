{
    "name":  "local_resource_diagnostic_tool",
    "version":  "1.0.1",
    "description":  "Local system diagnostics app (Windows + macOS) with privacy controls.",
    "main":  "main.js",
    "scripts":  {
                    "start":  "electron .",
                    "pack":  "electron-builder --dir",
                    "build":  "electron-builder"
                },
    "devDependencies":  {
                            "electron":  "^28.3.3",
                            "electron-builder":  "^24.13.3"
                        },
    "productName":  "Local Resource Diagnostic Tool",
    "build":  {
                  "directories":  {
                                      "buildResources":  "assets",
                                      "output":  "dist"
                                  },
                  "files":  [
                                "**/*",
                                "!dist/**"
                            ],
                  "productName":  "Local Resource Diagnostic Tool",
                  "mac":  {
                              "target":  "dmg",
                              "icon":  "assets/icon-mac.png"
                          },
                  "win":  {
                              "target":  "nsis",
                              "icon":  "assets/icon-win.png"
                          },
                  "appId":  "com.joostbosman.localresourcediagnostictool"
              }
}
