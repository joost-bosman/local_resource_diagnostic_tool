{
    "name": "local_resource_diagnostic_tool",
    "version": "1.0.4",
    "description": "Local system diagnostics app (Windows + macOS) with privacy controls.",
    "main": "main.js",
    "scripts": {
        "start": "electron .",
        "pack": "node scripts/generate-icons.js && electron-builder --dir",
        "build": "node scripts/generate-icons.js && electron-builder",
        "smoke": "node scripts/smoke-test.js"
    },
    "devDependencies": {
        "electron": "^28.3.3",
        "electron-builder": "^24.13.3",
        "png-to-ico": "^2.1.0"
    },
    "productName": "Local Resource Diagnostic Tool",
    "build": {
        "directories": {
            "buildResources": "assets",
            "output": "dist"
        },
        "files": [
            "**/*",
            "!dist/**"
        ],
        "productName": "Local Resource Diagnostic Tool",
        "mac": {
            "target": "dmg",
            "icon": "assets/icon-mac.icns"
        },
        "win": {
            "target": "nsis",
            "icon": "assets/icon-win.ico"
        },
        "appId": "com.joostbosman.localresourcediagnostictool"
    }
}
